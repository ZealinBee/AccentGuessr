datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Speaker {
  id        Int      @id @default(autoincrement())
  lat       Float
  lng       Float
  createdAt DateTime @default(now())
  clips     Clip[]
}

model Clip {
  id         Int      @id @default(autoincrement())
  audioUrl   String
  createdAt  DateTime @default(now())

  speakerId  Int
  speaker    Speaker  @relation(fields: [speakerId], references: [id])
}